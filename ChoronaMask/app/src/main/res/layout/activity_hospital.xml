<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hospital">

    <LinearLayout
        android:id="@+id/HospitalDetailsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textViewHospitalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="진료 가능한 시간 :"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewGeneralChrona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일반 감기 진료 :"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewTodayClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘 진료 :"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>